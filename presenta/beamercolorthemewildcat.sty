\mode<presentation>

\definecolor{white}{HTML}{F5F5F5}
\definecolor{black}{HTML}{282828}
\definecolor{gray}{HTML}{525252}

\definecolor{purple}{HTML}{B4B5EE}
\colorlet{darkpurple}{purple!160}
\colorlet{lightpurple}{purple!40}

\definecolor{blue}{HTML}{98CEF3}
\colorlet{darkblue}{blue!160}
\colorlet{lightblue}{blue!40}

\definecolor{deepsea}{HTML}{123499}

\definecolor{pink}{HTML}{F7ABDC}
\colorlet{darkpink}{pink!140}
\colorlet{lightpink}{pink!40}

\definecolor{red2}{HTML}{E95678}
\colorlet{red}{red2!70}
\colorlet{darkred}{red!140}
\colorlet{lightred}{red!30}

\definecolor{green}{HTML}{3FDAA4}

\definecolor{orange}{HTML}{F09483}

\colorlet{primarytitle}{darkpurple!130}
\colorlet{primary}{darkpurple}
\colorlet{secondary}{purple}

% Settings
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor{background canvas}{bg=white}

% Enumerate item color 
\setlist[enumerate]{label={\ifnum\@itemdepth=1\relax
  \color{primary}\else
  \color{primarytitle}\fi\textbf{\theenumi.}}}

% Itemize item color
\setlist[itemize]{label=\color{primary}$\bullet$}

% Change alerted text color
\setbeamercolor{alerted text}{fg=red}

% Turn off shading for block title when rounded=true (by default, rounded = false)
\makeatletter
\pgfdeclareverticalshading[lower.bg,upper.bg]{bmb@transition}{200cm}{%
  color(0pt)=(lower.bg); color(4pt)=(lower.bg); color(4pt)=(upper.bg)}

% Change block title background to wcprimary and body bg to wcprimary10
\setbeamercolor{block title}{fg=white,bg=red2}
\setbeamercolor{block body}{parent=normal text,fg=black,bg=lightred}

% Change the aler tblock title background to alerted text color
\setbeamercolor{block title alerted}{fg=white,bg=red}
\setbeamercolor{block body alerted}{fg=black,bg=lightred}

% Change the example block title background to greens
\setbeamercolor{block title example}{fg=white,bg=darkblue}
\setbeamercolor{block body example}{fg=black,bg=lightblue}

% Change caption text color to wcprimary
\setbeamercolor{caption name}{fg=primarytitle}

% Change color of toc text to wcprimary
\setbeamercolor{section in toc}{fg=deepsea!80}

% Ensure continuation text is white (for allowframebreaks)
\setbeamercolor{frametitle continuation}{fg=primarytitle}

% Set framtitle color to wcprimary
\setbeamercolor{frametitle}{fg=primarytitle}

\mode
<all>
