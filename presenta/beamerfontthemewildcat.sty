\mode<presentation>

% Create new font families from OTF fonts
\newfontfamily\SofiaProLightItalic[Path=fonts/SofiaPro/, Extension=.otf]{SofiaProLight-Italic}
\newfontfamily\SofiaProRegular[Path=fonts/SofiaPro/, Extension=.otf]{SofiaProRegular}
\newfontfamily\SofiaProMedium[Path=fonts/SofiaPro/, Extension=.otf]{SofiaProMedium}
\newfontfamily\SofiaProBold[Path=fonts/SofiaPro/, Extension=.otf]{SofiaPro-Bold}

% Change title font
\setbeamerfont{title}{family=\SofiaProBold, size=\LARGE}
\setbeamerfont{author}{family=\SofiaProLightItalic, size=\normalsize}
\setbeamerfont{frametitle}{family=\SofiaProRegular, size=\Large}
\setbeamerfont{section}{family=\SofiaProMedium, size=\LARGE}
\setbeamerfont{section in toc}{family=\SofiaProRegular}
\setbeamerfont{caption name}{family=\SofiaProMedium}
 
% Set sans font
\setsansfont[
    Path = fonts/SofiaPro/,
    UprightFont = *ExtraLight,
    ItalicFont = *ExtraLight-Italic,
    BoldFont = *Medium,
    BoldItalicFont = *Medium-Italic,
    Extension = .otf
]{SofiaPro}

% Set mono font (ships with LaTeX, no need to install)
